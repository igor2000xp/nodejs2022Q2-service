generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  login     String
  password  String
  version   Int       @default(1)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}
model Artist {
  id  String @id @default(uuid())
  name String
  grammy Boolean
  albums     Album[]
  tracks     Track[]
  favs       Favorite? @relation(fields: [favoriteId], references: [id], onDelete: SetNull)
  favoriteId String?
}

model Album {
  id         String    @id @default(uuid())
  name       String
  year       Int
  artist     Artist?   @relation(fields: [artistId], references: [id], onDelete: SetNull)
  artistId   String?
  tracks     Track[]
  favs       Favorite? @relation(fields: [favoriteId], references: [id], onDelete: SetNull)
  favoriteId String?
}

model Track {
  artist     Artist?   @relation(fields: [artistId], references: [id], onDelete: SetNull)
  artistId   String?
  albums     Album?    @relation(fields: [albumId], references: [id], onDelete: SetNull)
  albumId    String?
  favs       Favorite? @relation(fields: [favoriteId], references: [id], onDelete: SetNull)
  favoriteId String?
  id         String    @id @default(uuid())
  name       String
  duration   Int

}

model Favorite {
  artists Artist[]
  albums  Album[]
  tracks  Track[]
  id      String   @id @default(uuid())
}
